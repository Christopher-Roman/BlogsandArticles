<!DOCTYPE html>
<html>
  <head>
    <title>Blogandarticle</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="bg-secondary text-white">

    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
      <a class="navbar-brand" href="#">BLOGS & ARTICLES</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <ul class="nav">
        <li class="nav-item active">
          <button class="btn"><%= link_to "Blogs", home_path %></button> 
        </li>
        <li class="nav-item active">
          <button class="btn"><%= link_to "Articles", home_path %></button> 
        </li>
      </ul>
    </nav>
    <div class="row mx-md-n5">
      <div div class="col px-md-5">
        <div class="p-3">
          <%= yield %>
        </div>
      </div>
    </div>


  </body>
</html>
