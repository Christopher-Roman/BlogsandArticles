<div class="container">
	<div class="bg-dark text-white" style="padding: 20px; border-radius: 25px;">
		<h1>Register</h1>
		<br>
		<%= form_tag users_path do %>
		   <%= label_tag :username%>
		   <%= text_field_tag :username, nil, {:class => 'form-control'} %>
		   <br>
		   <%= label_tag :password%>
		   <%= password_field_tag :password, nil, :class => 'form-control' %>
		   <br>
		   <%= label_tag :confirm_password%>
		   <%= password_field_tag :password_confirmation, nil, :class => 'form-control' %>
		   <br>
		   <%= submit_tag 'Login', :class => 'btn btn-secondary'%>
		   <%= link_to "Back", home_path, :class => 'btn btn-dark text-primary' %>
		<%end%>

	</div>
</div>
