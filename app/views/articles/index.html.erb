<h1>Articles</h1>
<% if current_user %>
	<%= link_to "New Article", new_article_path, :class => 'btn btn-success' %>
<% else %>
	<span class="text-white"><%= link_to "Sign In", new_session_path, :class => 'text-white', :style => "text-decoration: underline;" %> or <%= link_to "Register", new_user_path, :class => 'text-white', :style => "text-decoration: underline;" %> to
	</span>
	<br>
	<button class="btn btn-success" disabled> New Article</button>
<% end %>
<% @articles.each do |article| %>
	<div style="padding-top: 15px;">
		<div class="card bg-dark text-white" style="padding: 10px; border-radius: 25px;">
		  <div class="card-header">
		    <%=article.title %>
		  </div>
		  <div class="card-body">
		    <blockquote class="blockquote mb-0">
		      <span class="d-inline-block" style="font-style: italic;"><%=article.opening_statement%></span>
		      <footer class="blockquote-footer text-white">
		      	<cite title="Source Title">
		      		<%= link_to "Source Link", "#{article.source_link}", :target => "_blank" %>
		      		</cite>
		      </footer>
		    </blockquote>
		    <%= link_to "Read More...", article_path(article), :class => 'btn btn-dark text-primary', :style => 'font-style: italic' %>
		  </div>
		</div>
	</div>
<%end%>